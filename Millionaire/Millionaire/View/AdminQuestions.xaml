<Window x:Name="questionpage" x:Class="Millionaire.View.AdminQuestions"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Millionaire.View"
        mc:Ignorable="d"
        Title="AdminQuestions" Height="723.293" Width="1043.989">
    <Grid Background="#FF2389E2" Margin="0,0,-8,-3" HorizontalAlignment="Left" Width="1044">
        <Rectangle Fill="White" Margin="29,39,32,50" Stroke="Black" StrokeThickness="0" RadiusX="3" RadiusY="3"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Height="339" Margin="46,239,0,0" AutoGenerateColumns="False" VerticalAlignment="Top" Width="946" FontSize="12" FontStretch="ExtraCondensed" MinColumnWidth="10" MaxColumnWidth="200">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Creator"  Binding="{Binding Creator.UserName}"/>
                <DataGridTextColumn Header="QuestionID"  Binding="{Binding QuestionID}"/>
                <DataGridTextColumn Header="QuestionString"  Binding="{Binding QuestionString}"/>
                <DataGridTextColumn Header="RightAnswer"  Binding="{Binding RightAnswer}"/>
                <DataGridTextColumn Header="Level"  Binding="{Binding Level}"/>
                <DataGridTextColumn Header="Category"  Binding="{Binding Category}"/>
                <DataGridTextColumn Header="WrongAnswer1"  Binding="{Binding WrongAnswer1}"/>
                <DataGridTextColumn Header="WrongAnswer2"  Binding="{Binding WrongAnswer2}"/>
                <DataGridTextColumn Header="WrongAnswer3"  Binding="{Binding WrongAnswer3}"/>
                
            </DataGrid.Columns>

            
                


        </DataGrid>
        <Button x:Name="button" Content="Visa" HorizontalAlignment="Left" Margin="371,190,0,0" VerticalAlignment="Top" Width="88" Click="button_Click" Cursor="Hand" Background="#FF2389DE" Height="29" BorderBrush="#FF0068FF" BorderThickness="0"/>
        <ComboBox x:Name="comboBox" HorizontalAlignment="Left" Margin="224,190,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="comboBox_SelectionChanged" Height="28">
            <ComboBoxItem Content="Kategori" HorizontalAlignment="Left" Width="118" Selected="ComboBoxItem_Selected"/>
            <ComboBoxItem Content="Senast tillagd" HorizontalAlignment="Left" Width="118"/>
        </ComboBox>

    </Grid>
</Window>
